package components

import "goth/model"

templ Product(item model.Item, fields []string) {
	<tr class="border-b border-gray-200 hover:bg-gray-100">
		<td class="py-2 px-4 text-left whitespace-nowrap"><a class="text-sky-600 font-bold underline" href={ item.URL }>{ item.Name }</a></td>
		<td class="py-2 px-4 text-left whitespace-nowrap">{ item.Price }</td>
		for _, field := range fields {
			<td class="py-2 px-4 text-left whitespace-nowrap">{ item.Fields[field] }</td>
		}
	</tr>
}
